<Window x:Class="CadastroAluno.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadastroAluno"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="CampoAluno" HorizontalAlignment="Left" Height="20" Margin="108,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137"/>
        <TextBox x:Name="CampoNota1" HorizontalAlignment="Left" Height="20" Margin="108,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137"/>
        <TextBox x:Name="CampoNota2" HorizontalAlignment="Left" Height="20" Margin="108,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137"/>
        <TextBox x:Name="CampoMatricula" HorizontalAlignment="Left" Height="20" Margin="108,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137"/>
        <Label Content="Nome Aluno" HorizontalAlignment="Left" Height="28" Margin="10,61,0,0" VerticalAlignment="Top" Width="93"/>
        <Label Content="Matrícula" HorizontalAlignment="Left" Height="28" Margin="10,94,0,0" VerticalAlignment="Top" Width="93" RenderTransformOrigin="0.505,1.287"/>
        <Label Content="Nota 2" HorizontalAlignment="Left" Height="28" Margin="10,160,0,0" VerticalAlignment="Top" Width="93"/>
        <Label Content="Nota 1" HorizontalAlignment="Left" Height="28" Margin="10,127,0,0" VerticalAlignment="Top" Width="93"/>
        <Button x:Name="Cadastro" Content="Cadastrar" HorizontalAlignment="Left" Height="20" Margin="400,164,0,0" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="Exibicao" Content="Exibir" HorizontalAlignment="Left" Height="19" Margin="400,0,0,0" VerticalAlignment="Center" Width="161"/>

    </Grid>
</Window>
