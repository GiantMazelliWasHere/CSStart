<Window x:Class="CalculadoraWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textoSaida" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Margin="10,197,0,0"/>
        <Button x:Name="processa" Content="Processar" HorizontalAlignment="Left" Height="20" Margin="214,197,0,0" VerticalAlignment="Top" Width="94" Click="processa_Click"/>
        <TextBox x:Name="campoEntrada" HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" TextChanged="campoEntrada_TextChanged"/>
        <TextBox x:Name="conteudo" HorizontalAlignment="Left" Height="207" Margin="434,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="329"/>
        <Button x:Name="botaoBuffer" Content="Adicionar" HorizontalAlignment="Left" Height="24" Margin="214,10,0,0" VerticalAlignment="Top" Width="94" Click="botaoBuffer_Click"/>
        <Button x:Name="Clear" Content="Limpar" HorizontalAlignment="Left" Height="24" Margin="10,102,0,0" VerticalAlignment="Top" Width="188" Click="Clear_Click"/>

    </Grid>
</Window>
