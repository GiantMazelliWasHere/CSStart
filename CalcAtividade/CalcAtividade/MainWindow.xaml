<Window x:Class="CalcAtividade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcAtividade"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="campoEntrada" HorizontalAlignment="Left" Height="20" Margin="41,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <Button x:Name="adicionar" Content="Adicionar" HorizontalAlignment="Left" Height="20" Margin="241,10,0,0" VerticalAlignment="Top" Width="99" Click="adicionar_Click"/>
        <Button x:Name="soma" Content="+" HorizontalAlignment="Left" Height="21" Margin="41,54,0,0" VerticalAlignment="Top" Width="130" Click="soma_Click"/>
        <Button x:Name="subtracao" Content="-" HorizontalAlignment="Left" Height="21" Margin="210,54,0,0" VerticalAlignment="Top" Width="130" Click="subtracao_Click"/>
        <Button x:Name="divisao" Content="/" HorizontalAlignment="Left" Height="21" Margin="210,107,0,0" VerticalAlignment="Top" Width="130" Click="divisao_Click"/>
        <Button x:Name="multiplicacao" Content="*" HorizontalAlignment="Left" Height="21" Margin="41,107,0,0" VerticalAlignment="Top" Width="130" Click="multiplicacao_Click"/>
        <TextBox x:Name="campoResultado" HorizontalAlignment="Left" Height="20" Margin="41,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="299"/>
        <Button x:Name="limpar" Content="Limpar" HorizontalAlignment="Left" Height="24" Margin="41,202,0,0" VerticalAlignment="Top" Width="299" Click="limpar_Click" RenderTransformOrigin="0.492,2.048"/>
        <TextBox x:Name="campoConteudo" HorizontalAlignment="Left" Height="217" Margin="400,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"/>

    </Grid>
</Window>
